<!-- MAIN CONTENT -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <h3>Add Product</h3>

            <form action="/products/add" method="post" class="form-inline py-3">
                <input name="productID" type="text" class="form-control" placeholder="Product ID"/>
                <input name="productName" type="text" class="form-control" placeholder="Product Name"/>
                <input name="productDesc" type="text" class="form-control" placeholder="Product Description"/>
                <input name="productPrice" type="text" class="form-control" placeholder="Product Price"/>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

